<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.Userinfo" table="userinfo" schema="java_shop">
        <id name="userId">
            <column name="userId" sql-type="int(10) unsigned"/>
        </id>
        <property name="userName">
            <column name="userName" sql-type="varchar(16)" length="16"/>
        </property>
        <property name="userPwd">
            <column name="userPwd" sql-type="varchar(16)" length="16"/>
        </property>
    </class>
</hibernate-mapping>